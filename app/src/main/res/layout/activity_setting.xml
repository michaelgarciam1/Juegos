<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_juegos"
    tools:context=".Setting">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView1212"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="Escriba su contraseña actual"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editContraseñaActual"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000000"
            android:backgroundTint="#BDC9D3"
            android:ems="10"
            android:hint="Actual contraseña"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:text="Nueva contraseña"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editNuevaContraseña"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="#000000"
            android:backgroundTint="#BDC9D3"
            android:ems="10"
            android:hint="Nueva Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/btCambioContraseña"
            style="@style/botons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Cambiar Contraseña" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="#000000" />

    </LinearLayout>


    <Button
        android:id="@+id/bt_changePhoto"
        style="@style/botons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="21dp"
        android:text="Cambiar foto de perfil"
        app:layout_constraintEnd_toStartOf="@+id/imgPerfilSetting"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="60dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/bt_changePhoto"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/bt_backMenu"
        style="@style/botons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="23dp"
        android:text="Volver al menu"
        app:layout_constraintBottom_toTopOf="@+id/btFinish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/imgPerfilSetting"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/btFinish"
        style="@style/botons"
        android:layout_width="208dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="51dp"
        android:text="Cerrar Sesión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_backMenu"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/tvmax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:text="El tamaño máximo es de 1MB"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfilSetting"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btData"
        style="@style/botons"
        android:layout_width="128dp"
        android:layout_height="33dp"
        android:clickable="false"
        android:text="Añadir datos"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>